<p id="notice"><%= notice %></p>

<h1>Worklists</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Next Worklist</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @worklists.each do |worklist| %>
      <tr>
        <td><%= worklist.name %></td>
        <td><%= worklist.nextworklist %></td>
        <td><%= worklist.status %></td>
        <td><%= link_to 'Show', worklist, class: 'btn btn-s btn-primary' %></td>
        <td><%= link_to 'Edit', edit_worklist_path(worklist), class: 'btn btn-s btn-success' %></td>
        <td><%= link_to 'Destroy', worklist, method: :delete, class: 'btn btn-s btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
</div>

<br>

<div class="col-md-6 col-md-offset-0 panel panel-default "> 
<h3>Import Worklists</h3>
  <div class="panel=body">
<%= form_tag import_worklists_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload Worklists", class: 'btn btn-s btn-success' %>
<% end %>
  </div>
</div>


