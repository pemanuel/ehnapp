<!DOCTYPE html>
<html>
<head>
  <title>EHN Eclipse</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        
        <ul class="nav nav-tabs"> 
         <li>
            <div class="logo">
              <%= link_to image_tag('logo_eclipse.png'), root_path %>
            </div>
          </li>     
          <% if user_signed_in? %>
            <li><%= link_to "Patients", patients_path %></li>
            <li><%= link_to "Referrals", referrals_path %></li>
            <li><%= link_to "Worklists", worklists_path %></li>
            <li><%= link_to "Search", welcome_search_path %></li>
            <li><%= link_to "Reports", welcome_reports_path %></li>
            <li><%= link_to "Messages", conversations_path %></li>
            <li><%= link_to "My Profile", edit_user_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            
          <% end %>
          
        </ul>
      </div>
    </div>
  </div>
</header>

<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, msg| %>
          <% if msg.is_a?(String) %>
            <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            </div>
          <% end %>
        <% end %>
              
        <%= yield %>
      </div>
    </div>
  </div>
</div>

 <footer>
  <div class="copyright text-center">
    <%= "Copyright &copy; 2015  Electronic Health Network, Inc.  All Rights Reserved".html_safe %>
  </div>
</footer>
</body>
</html>
