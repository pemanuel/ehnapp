<!DOCTYPE html>
<html>
<head>
  <title>EHN Eclipse</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <ul class="nav nav-tabs">      
    <% if user_signed_in? %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Patients", patients_path %></li>
      <li><%= link_to "Worklists", worklists_path %></li>
      <li><%= link_to "Search", welcome_search_path %></li>
      <li><%= link_to "Reports", welcome_reports_path %></li>
      <li><%= link_to "Messages", conversations_path %></li>
      <li><%= link_to "My Profile", edit_user_registration_path %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      
    <% end %>
    
  </ul>
 
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
      
<%= yield %>

</div>

</body>
</html>
